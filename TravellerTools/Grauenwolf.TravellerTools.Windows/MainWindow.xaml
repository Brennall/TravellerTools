<Window x:Class="Grauenwolf.TravellerTools.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grauenwolf.TravellerTools.Windows"
        mc:Ignorable="d"
        Title="Traveller Tools for Windows" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" >
                <Button>Download Universe</Button>
                <Button ToolTip="Do this after hand-editing a map.">Load Maps</Button>
            </StackPanel>
            <TextBlock TextWrapping="Wrap">
                To use custom maps, first download the universe. Then edit the Universe.json file to list your custom sectors. Create the matching sector files. Finally, reload the maps.
            </TextBlock>
        </StackPanel>
        <Label  DockPanel.Dock="Bottom">The Traveller game in all forms is owned by Far Future Enterprises. Copyright © 1977 – 2015 Far Future Enterprises.</Label>
    </DockPanel>
</Window>
